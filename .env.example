# ROBOTIX INSTITUTE - Platform Environment Variables

# Application
NEXT_PUBLIC_APP_NAME=ROBOTIX INSTITUTE
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# NextAuth (REQUIRED)
NEXTAUTH_SECRET=generate-a-secure-random-string-here
NEXTAUTH_URL=http://localhost:3000

# Database â€” must match prisma/schema.prisma datasource config
POSTGRES_PRISMA_URL=postgresql://robotix_user:secure_password_here@localhost:5432/robotix_db?pgbouncer=true
POSTGRES_URL_NON_POOLING=postgresql://robotix_user:secure_password_here@localhost:5432/robotix_db

# Admin Seed Key (used by /api/seed-admin to create initial admin user)
ADMIN_SEED_KEY=change-this-to-a-secure-random-key

# Admin Email (for receiving admin notifications)
ADMIN_EMAIL=admin@robotixinstitute.io

# Email (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@robotixinstitute.io

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=robotix-institute-files
AWS_REGION=af-south-1

# Stripe (for payments)
STRIPE_PUBLIC_KEY=pk_test_your_public_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Analytics
NEXT_PUBLIC_GA_ID=your-google-analytics-id
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Security
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Feature Flags
FEATURE_PAYMENTS_ENABLED=true
FEATURE_LIVE_CLASSES_ENABLED=true
FEATURE_GAMIFICATION_ENABLED=true

# NOTE: Legacy JWT_SECRET / JWT_EXPIRE are no longer used.
# Authentication is handled entirely through NextAuth (NEXTAUTH_SECRET).

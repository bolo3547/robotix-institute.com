# ROBOTIX INSTITUTE - Platform Environment Variables

# Application
NEXT_PUBLIC_APP_NAME=ROBOTIX INSTITUTE
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Authentication
JWT_SECRET=your-super-secret-key-change-in-production-immediately
JWT_EXPIRE=7d

# Database (when implemented)
DATABASE_URL=your-database-url
POSTGRES_USER=robotix_user
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=robotix_db

# Email (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@robotixinstitute.io

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=robotix-institute-files
AWS_REGION=af-south-1

# Stripe (for payments)
STRIPE_PUBLIC_KEY=pk_test_your_public_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Analytics
NEXT_PUBLIC_GA_ID=your-google-analytics-id
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Security
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Feature Flags
FEATURE_PAYMENTS_ENABLED=true
FEATURE_LIVE_CLASSES_ENABLED=true
FEATURE_GAMIFICATION_ENABLED=true

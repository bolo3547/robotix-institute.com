generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  name      String
  role      String    @default("parent") // parent | student | instructor | admin
  image     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  payments  Payment[]
}

model Payment {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  description   String
  amount        Float
  currency      String   @default("ZMW")
  status        String   @default("pending") // pending | paid | overdue | cancelled
  method        String?  // mobile_money | bank_transfer | card | cash
  reference     String?  // payment reference / transaction ID
  receiptNumber String?  @unique
  paidAt        DateTime?
  dueDate       DateTime?
  notes         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([status])
}

model SiteSetting {
  id    String @id @default(cuid())
  key   String @unique
  value String

  @@index([key])
}

model Photo {
  id          String   @id @default(cuid())
  title       String
  description String?
  url         String
  category    String   @default("general") // general | robotics | events | students | projects
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String
  date        DateTime
  time        String?
  endDate     DateTime?
  location    String?
  image       String?
  category    String   @default("workshop") // workshop | competition | camp | openday | webinar
  featured    Boolean  @default(false)
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PageContent {
  id        String   @id @default(cuid())
  pageId    String   @unique // homepage, about, programs, testimonials, contact, what-you-get
  content   String   @db.Text // JSON string with all sections
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([pageId])
}
